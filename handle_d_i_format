#include "main.h"
int handle_integer(int num, char *number) {
    int length = 0;

    if (num == 0) {
        number[0] = '0';
        length = 1;
    } else {
        int isNegative = 0;

        if (num < 0) {
            isNegative = 1;
            num = -num;
        }

        int index = NUMBER_SIZE - 1;
        while (num > 0) {
            int digit = num % 10;
            buffer[index] = digit + '0';
            num /= 10;
            index--;
        }

        if (isNegative) {
            buffer[index] = '-';
            index--;
        }

        length = NUMBER_SIZE - index - 1;
    }

	return (length);
}

